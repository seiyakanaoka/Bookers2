<div class="container">
  <div class="row">
    <div class="mx-auto col-md-10">
      
      <div class="edit">
        
        <h1>Editing Book</h1>
        <%= form_with model:@book, local:true do |f| %>
 
            <div class="edit-book">
              <%= f.label :title %><br />
              <%= f.text_field :title, class:"form-control title" %>
            </div>
  
            <div class="edit-book">
              <%= f.label :body %><br />
              <%= f.text_field :body, class:"form-control body" %>
            </div>
  
            <div class="Update-action">
