<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/list', books: @books, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
     <h1>Book detail</h1>
     <table class="table table-hover">
      <thead>
        <tr></tr>
        <tr></tr>
        <tr></tr>
        <tr></tr>
        <tr></tr>
        <tr></tr>
      </thead>

      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br />
            <%= @user.name %><% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %><%= @book.title %><% end %>
          </td>
          <td><%= @book.body %></td>
          <td>
            <% if @user.id == current_user.id %>
            <%= link_to "Edit", edit_book_path(@book.id) %>
            <% end %>
          </td>
          
          <td>
            <% if @book.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(@book), method: :delete do %>♥<%= @book.favorites.count %><% end %>
            <% else %>
              <%= link_to book_favorites_path(@book), method: :post do %>♡<%= @book.favorites.count %><% end %>
            <% end %>
          </td>
          <td>
            <% if @user.id == current_user.id %>
            <%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm:"Are you sure?"} %>
            <% end %>
          </td>
          <td>コメント数：<%= @book.book_comments.count %></td>

        </tr>


      </tbody>
    </table>

    <div class="book_comment">
      <table>
        <tbody>
          <% @book.book_comments.each do |comment| %>
            <tr>
              <td>
                <%= link_to user_path(comment.user_id) do %><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br />
                <%= comment.user.name %><% end %>
              </td>
              <td><%= comment.comment %></td>
              <td><% if comment.user_id == current_user.id %><%= link_to "Destroy", book_book_comment_path(comment.book, comment), method: :delete, data: {confirm:"Are you sure?"}, class: "btn btn-danger" %><% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

    <div class="new-comment">
      <% if @book.user_id == current_user.id %>
        <%= form_with(model:[@book, @book_comment], local:true) do |f| %>
          <%= f.text_area :comment, rows: "5", placeholder: "コメントをここに", class: "form-control comment" %><br />
          <%= f.submit "送信" %>
        <% end %>
      <% end %>
    </div>

   </div>

</div>