

<div class="container">
  <div class="row">
    <div class="col-md-8">


      <h2>Sign up</h2>

      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email, class:"mt-3" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :postal_code %><br>
        <%= f.text_field :postal_code %>
      </div>

      <div class="field">
        <%= f.label :prefecture_code %><br>
        <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name %>
      </div>

      <div class="field">
        <%= f.label :city %><br>
        <%= f.text_field :city %>
      </div>

      <div class="field">
        <%= f.label :street %><br>
        <%= f.text_field :street %>
      </div>
      <div class="field">
        <%= f.label :other_address %><br>
        <%= f.text_field :other_address %>
      </div>

      <div class="field">
        <%= f.label :password, class:"mt-3" %>
        <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class:"mt-3" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-sm btn-success mt-3" %>
      </div>
      <% end %>

      <%= render "devise/shared/links", class: "mt-3" %>

    </div>
  </div>
</div>
