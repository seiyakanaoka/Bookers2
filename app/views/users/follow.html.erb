<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Follow Users</h1>

      <% if @following_users.empty? == true %>
        <p class="mx-auto text-center">ユーザーはいません</p>
      <% else %>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @following_users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td>フォロー数：<%= user.following_user.count %></td>
              <td>フォロワー数：<%= user.follower_user.count %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <% end %>

    </div>
  </div>
</div>
