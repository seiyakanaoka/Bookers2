<div class="container">  
  <div class="row">
    <div class="col-md-3">
      <div class="user-info">
        <h1>User info</h1>
          <p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></p>
          <table class="table table-border-b">
            <tbody>
              <tr>
                <th>name</th><th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th><th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>
         
          <div class="row"><%= link_to(edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block text-dark") do %><i class="fas fa-user-cog"></i><% end %></div>

      </div>    
      
      <div class="book-form mt-3">
      <h1>New book</h1>
        <div class="book-form-content">
        <%= form_with model:@book, local:true do |f| %>

        <div class="book-field">
          <%= f.label :title %><br />
          <%= f.text_field :title %>
        </div>

        <div class="book-field">
          <%= f.label :body %><br />
          <%= f.text_area :body %>
        </div>

        <div class="book-action">
          <%= f.submit "Create Book", class:"btn btn-success mb-5" %>
        </div>
        <% end %>
        </div>
      </div>
    </div>
  
    <div class="col-md-8 offset-md-1">
    <h1>Users</h1>
      <table class="table table-hover">
        
        <thead>
          <tr>
            <th>Image</th><th>Name</th>
            <th></th>
          </tr>
        </thead>
        
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
        <%= paginate @users %>
      </tbody>
    </table>
    </div>
  </div>
</div>
