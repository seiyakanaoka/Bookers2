<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/list', books: @books, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h1>Users</h1>
      <table class="table table-hover">

        <thead>
          <tr>
            <th>Image</th><th>Name</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td>フォロー数：<%= user.following_user.count %></td>
            <td>フォロワー数：<%= user.follower_user.count %></td>
            <td>
              <% if current_user != user %>
                <% if current_user.following?(user) %>
                    <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete %>
                <% else %>
                    <%= link_to 'フォローする', user_relationships_path(user.id), method: :post %>
                <% end %>
              <% end %>
            </td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
        <%= paginate @users %>
      </tbody>
    </table>
    </div>
  </div>
</div>
