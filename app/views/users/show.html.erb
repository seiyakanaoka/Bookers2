<div class="container">
  <div class="row">
   <div class="col-md-3">
     <h1>User info</h1>
       <p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></p>
       <p><%= @user.name %></p>
       <p><%= @user.introduction %></p>


      <p class="btn btn-secondary"><%= link_to edit_user_path(@user.id) do %><i class="fas fa-user-cog"></i><% end %></p>
      
    <div class="book-form">
      <h1>New book</h1>
      <div class="book-form-content">
      <%= form_with model:@book, local:true do |f| %>

      <div class="book-field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div class="book-field">
        <%= f.label :body %>
        <%= f.text_area :body %>
      </div>

      <div class="book-action">
        <%= f.submit "Create Book" %>
      </div>
      <% end %>
    </div>
  </div>
    
   </div>
      
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-striped">
       <thead>
        <tr></tr>
        <tr>Title</tr>
        <tr>Opinion</tr>
       </thead>
      
       <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(book.user.id) do %><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><% end %></td>
            <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      <%= paginate @books %>
       </tbody>
      </table>
    </div>    
  </div>
</div>